for (double x = -Math.PI; x <= Math.PI/2; x += 0.2)
{
    double y;
    if (x > 2.5)
        y = x + 1;
    else if (x <= 0 && x <= 2.5)
        y = 1 - Math.Pow(x, 5);
    else
        y = x+Math.Log(Math.Abs(Math.Cos(x)));
    Console.WriteLine($"| {x,8:F2}   | {y,14:F2} |");
}
